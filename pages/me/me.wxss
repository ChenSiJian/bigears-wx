/* pages/me/index.wxss */
page {
    height: 100%;
    width: 100%;
    background: #d4e9c8;
}

.container {
    display: flex;
    flex-direction: column;
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.separate {
    /*background: #e0e3da;*/
    background: #bfbfbf;
    width: 100%;
    height: 4rpx;
}


.profile-info {
    background-color: #afbd9d;
    color: #f4f4f4;
    display: flex;
    align-items: center;
    padding: 30rpx;
    font-size: 28rpx;
}

.profile-info .avatar {
    height: 148rpx;
    width: 148rpx;
    border-radius: 50%;
}

.profile-info .info {
    flex: 1;
    height: 85rpx;
    padding-left: 31.25rpx;
}

.profile-info .name {
    display: block;
    height: 45rpx;
    line-height: 45rpx;
    color: #fff;
    font-size: 37.5rpx;
    margin-bottom: 10rpx;
}

.shareButton{
    padding: 0 !important;
    border:none !important;
    width: 100%;
}
.user_row {
    /*border: 1px solid black;*/
    height: 86rpx;
    line-height: 86rpx;
    /*border-bottom: 5px solid #28a54c;*/
}

.user_row_left {
    /* border: 1px solid #757575; */
    font-size: 18px;
    color: rgba(53, 53, 53, 0.6);
    float: left;
    height: 86rpx;
    font-weight: 550;
    line-height: 86rpx;
    margin-left: 35rpx;
    font-size: 26rpx;
    letter-spacing: 1rpx;
}
.user_row_middle {
    /* border: 1px solid #757575; */
    float: inside;
    height: 86rpx;
    text-align: center;
    font-weight: 550;
    line-height: 86rpx;
    margin-left: 35rpx;
    font-size: 26rpx;
    letter-spacing: 1rpx;
}

.user_row_right {
    /* border: 1px solid #757575; */
    float: right;
    height: 40rpx;
    width: 40rpx;
    font-weight: 550;
    line-height: 86rpx;
    margin-top: 28rpx;
    margin-right: 30rpx;
}
.description {
    font-size: 24rpx;
    color: #999999;
}
.book-num {
    font-size: 36rpx;
    color: #000000;
}

.preview-container {
    margin-top: 30rpx;
    width: 690rpx;
    display: flex;
    flex-direction: row;
    padding:0 30rpx;
    flex-wrap:wrap;
    justify-content: space-between;
}

.preview {
    margin-bottom: 30rpx;
}


.about-container>view:nth-child(2) {
    margin-top: -5rpx;
}

.like-container {
    /* margin-top:30rpx; */
    /*margin-top: -10rpx;*/
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #d4e9c8;
}

.headline {
    margin-top: 30rpx;
    width: 97rpx;
    height: 42rpx;
}