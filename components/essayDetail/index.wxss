@import "../../utils/richTextParse/richText.wxss";
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    background: #fff;
}
.title{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 34rpx;
    margin-top: 20rpx;
}
.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 60rpx;
    align-items: left;
    justify-content: flex-start;
    margin-top: 40rpx;
    border-bottom: 1px solid #f5f5f5;
}
.author{
    margin-left: 15rpx;
    font-size: 26rpx;
    color: #9a6e3a;
}

.essay-info {
    width: 90%;
    margin-top: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.detail {
    width: 100%;
    height: auto;
}

.detail image {
    display: block;
}

.comment{
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f5f5f0;
    padding-bottom: 80rpx;
}
.comment-header{
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 40rpx;
    align-items: center;
    justify-content: space-between;
    margin-top: 30rpx;
    /*border-bottom: 1px solid #669900;*/
}
.comment-header .left{
    margin-left: 30rpx;
    margin-bottom: 10rpx;
    font-size: 32rpx;
    color: #858a91;
}
.comment-header .right{
    margin-right:30rpx;
    margin-bottom: 10rpx;
    font-size: 32rpx;
    color: #043d88;
}

.commentsItem-container{
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;

}
.commentsItem-face{
    width: 76rpx;
    height: 72rpx;
    margin-left: 5px;
}
.commentsItem-content-all{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.commentsItem-content-all .nicknameAndZan{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
    line-height: 40rpx;
}
.commentsItem-content-all .content{
    margin-top: 15rpx;
    margin-left: 20rpx;
    max-width: 95%;
    max-height: 140rpx;
    line-height: 40rpx;
    font-size: 32rpx;
}
.commentsItem-content-all .nicknameAndZan .nickname{
    margin-left: 15px;
    color: #a1a1a1;

}
.commentsItem-content-all .nicknameAndZan .zan{
    margin-right: 30rpx;
}
.line{
    height:32rpx;
    line-height: 32rpx;
    font-size: 28rpx;
    color: #a1a1a1;
    margin-top: 15rpx;
    margin-left: 5rpx;
    padding-left: 10rpx;
    border-left:2px solid  darkgreen;
}

.nickname-lbl{
    color: #a1a1a1;
}

.date-lbl{
    color: #a1a1a1;
}

.like-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right:30rpx;
}
